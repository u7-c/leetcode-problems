#include <vector>
#include <numeric> // You might need this for std::iota if you use it

class Solution {
  public:
    int josephus(int n, int k) {
        // 1. Create a vector to hold the people from 1 to n.
        //    You can't use the integer 'n' as a list.
        std::vector<int> people;
        for (int i = 1; i <= n; ++i) {
            people.push_back(i);
        }

        int currentIndex = 0;

        // 2. Loop until only one person is left.
        while (people.size() > 1) {
            // 3. Find who to remove. Use the vector's current size.
            int index_to_remove = (currentIndex + k - 1) % people.size();
            
            // 4. Remove them using the correct erase() syntax.
            people.erase(people.begin() + index_to_remove);
            
            // 5. Update the starting point for the next count.
            currentIndex = index_to_remove;
        }
        
        // 6. Return the last survivor.
        return people[0];
    }
};